

<div class="channelsIndex">
  
    
    <h1 class="text-light">Channels</h1>
  

   
    <%= link_to new_channel_path, class: 'btn btn-warning' do %>
      Add New Channel
    <% end %>
    
  

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover tabla">
      <thead>
        <tr>
      
          <th>Name</th>
      

              
        </tr>
      </thead>

      <tbody>
        <% @channels.each do |channel| %>
          <%= content_tag :tr, id: dom_id(channel), class: dom_class(channel) do %>
            
              <td><i class="fas fa-sign-in-alt not-show"></i>
              <%= link_to channel.name, channel, class: "textOr" %></td>
            

            
            
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>