

<div class="channelsIndex">
  <div class="row">
    <div class="col-sm-6">
      <h1>Channels</h1>
    </div>

    <div class="col-sm-6 text-right">
    <%= link_to new_channel_path, class: 'btn btn-primary' do %>
      Add New Channel
    <% end %>
    </div>
  </div>

  <div class="container-fluid">
 
      <div class="row my-5 rr">
      
        <% @channels.each do |channel| %>
          <%= link_to (channel) do %>
            <div class="card">
            
              <div class="icon"></div>
                <p class="title"><%= channel.name %></p>
                <p class="text">Join Channel</p>
        
            </div>
              
          <% end %>
          

            
            
         
        <% end %>
      </div>
    
  </div>
</div>